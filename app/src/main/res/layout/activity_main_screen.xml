<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uy.uyquiz1.MainScreen">


    <Button
        android:id="@+id/CSButton"
        android:onClick="callSecondActivity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="B.S. Computer Science" />

    <Button
        android:id="@+id/ISButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/CSButton"
        android:onClick="callThirdActivity"
        android:text="B.S. Information Systems" />

    <Button
        android:id="@+id/ITButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below= "@id/ISButton"
        android:onClick="callFourthActivity"
        android:text="B.S. Information Technology" />


</RelativeLayout>
