    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uy.uyquiz1.SecondActivity">

    <TextView
        android:id="@+id/csdescription"
        android:layout_marginTop="50dp"
        android:layout_gravity="fill_horizontal"
        android:text="BACHELOR OF SCIENCE IN COMPUTER SCIENCE (4 years)

        Level I accredited by the Philippine Accrediting Association of Schools, Colleges, and Universities

